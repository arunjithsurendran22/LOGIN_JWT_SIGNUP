<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Carousel</title>

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        /* Custom CSS for added styles */
        .navbar {
            background: #000; /* Black background for the navbar */
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #fff; /* White text color for navigation links */
        }

        .navbar-dark .navbar-toggler-icon {
            background-color: #fff; /* White color for the navbar toggle icon */
        }

        .restaurant-heading {
            background: #FF5733;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        /* Custom styles for sign up and login buttons */
        .btn-custom {
            background-color: #000; /* Black background for buttons */
            color: #fff; /* White text color for buttons */
            border: none;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

        .btn-custom:hover {
            background-color: #333; /* Dark gray background on hover */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">Restaurant Name</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-custom" href="signup">Sign up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-custom" href="login">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Restaurant Heading -->
    <div class="restaurant-heading">
        <h1>Restaurant Name</h1>
        <p>Welcome to Our Restaurant</p>
    </div>

    <!-- Carousel Section -->
    <div id="restaurantCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators (optional) -->
        <ol class="carousel-indicators">
            <li data-target="#restaurantCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#restaurantCarousel" data-slide-to="1"></li>
            <li data-target="#restaurantCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Slides -->
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="../images/download.jpeg" class="d-block w-100" alt="Slide 1">
            </div>
            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="image2.jpg" class="d-block w-100" alt="Slide 2">
            </div>
            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="image3.jpg" class="d-block w-100" alt="Slide 3">
            </div>
        </div>

        <!-- Controls (optional) -->
        <a class="carousel-control-prev" href="#restaurantCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" ariahidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#restaurantCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" ariahidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
